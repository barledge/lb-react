{
  "name": "lb-react",
  "version": "1.0.0",
  "main": "server/server.js",
  "scripts": {
    "start": "node .",
    "pretest": "jshint .",
    "posttest": "nsp check",
    "dev-server": "nodemon server/server.js --watch server --watch common --ext js,json ",
    "dev-client": "cd client && npm run dev",
    "build-client": "cd client && npm run clean && npm run build",
    "dev": "npm-run-all --parallel dev-server dev-client"
  },
  "dependencies": {
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "helmet": "^0.14.0",
    "loopback": "^2.22.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^2.1.0",
    "loopback-component-storage": "^1.8.1",
    "loopback-datasource-juggler": "^2.39.0",
    "serve-favicon": "^2.0.1"
  },
  "devDependencies": {
    "jshint": "^2.5.6",
    "nodemon": "^1.9.2",
    "npm-run-all": "^3.1.0",
    "nsp": "^2.1.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "description": "Fullstack Loopback api framework along with React.js client"
}
